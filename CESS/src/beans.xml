<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd
		http://www.springframework.org/schema/aop 
		http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">
	<!-- 采用注解配置 -->
	<context:annotation-config />
	<!-- 设置自动搜索bean的类包，包括类包下的子包 -->
	<context:component-scan base-package="cn.es" />

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<value>classpath:jdbc.properties</value>
		</property>
	</bean>
	<!-- 由spring初始化数据源，采用c3p0连接池 -->
	<bean id="dataSource" destroy-method="close"
		class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<property name="driverClass" value="${jdbc.driverClassName}" />
		<property name="jdbcUrl" value="${jdbc.url}" />
		<property name="user" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
		<property name="maxPoolSize" value="50" />
		<property name="minPoolSize" value="5" />
		<property name="initialPoolSize" value="5" />
		<property name="acquireIncrement" value="5" />
		<property name="maxIdleTime" value="20" />
	</bean>

	<bean id="sf" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<!-- 将初始化好的数据源注入到hibernate的SessionFactory中去 -->
		<property name="dataSource" ref="dataSource" />
	<!--
		<property name="annotatedClasses">
	    	<list>
		    	<value>cn.es.permission.model.Student</value>
		    	<value>cn.es.information.model.ClassInfo</value>
            </list>
        </property>
	-->
		<!-- 设置自动搜索的实体类包 -->
		<property name="packagesToScan">
			<list>
				<value>cn.es</value>
			</list>
		</property>
		<!--设置hibernate的属性 -->
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.format_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
			</props>
		</property>
	</bean>
		
	<tx:advice id="txAdvice" transaction-manager="txManager"> 
		<tx:attributes>
    		<tx:method name="get*" read-only="true" /> 
			<tx:method name="*" read-only="false"/>
		</tx:attributes> 
	</tx:advice>

	<aop:config proxy-target-class="true">    
  		<aop:pointcut id="tranPointcut" expression="execution(public * cn.es..service.*.*(..))"/>
  		<aop:advisor advice-ref="txAdvice" pointcut-ref="tranPointcut"/>
	</aop:config> 

	<bean id="txManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sf" />
	</bean>
	
	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory" ref="sf" />
	</bean>
	
	<!-- 在下面定义其他bean -->
</beans>